# 基础架构与核心库
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y

# 代理转发增强 (建议增加)
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-nft-socket=y
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_PACKAGE_ip-full=y

# eBPF 审计组件 (你的特色需求)
CONFIG_PACKAGE_kmod-bpf=y
CONFIG_PACKAGE_kmod-lib-btf=y
CONFIG_PACKAGE_bpftool-full=y
CONFIG_PACKAGE_libbpf=y

# 自动均衡多核中断
CONFIG_PACKAGE_irqbalance=y


# 1. 剔除无线加密协议守护进程 (这是最占空间的无线组件)
# CONFIG_PACKAGE_wpad-basic-mbedtls is not set
# CONFIG_PACKAGE_wpad-basic-openssl is not set
# CONFIG_PACKAGE_wpad-openssl is not set
# CONFIG_PACKAGE_hostapd-common is not set

# 2. 剔除无线配置工具
# CONFIG_PACKAGE_iw is not set
# CONFIG_PACKAGE_iwinfo is not set

# 3. 剔除内核层面的无线支持
# CONFIG_PACKAGE_kmod-cfg80211 is not set
# CONFIG_PACKAGE_kmod-mac80211 is not set

# 4. 剔除特定的 Intel 无线驱动 (J4125 常见)
# CONFIG_PACKAGE_kmod-iwlwifi is not set

# 5. 剔除 LuCI (网页界面) 中的无线管理模块
# CONFIG_PACKAGE_luci-mod-network-wireless is not set
